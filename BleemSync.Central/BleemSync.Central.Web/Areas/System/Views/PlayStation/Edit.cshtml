@addTagHelper *, BleemSync.UI
@model BleemSync.Central.Data.Models.PlayStation.Game

<card title="PlayStation Games">
    <card-body>
        <form method="post">
            <hidden asp-for="Id" />
            <textbox asp-for="Title" />
            <textbox asp-for="Fingerprint" />
            <textbox asp-for="Version" />
            <textbox asp-for="Developer" />
            <textbox asp-for="Publisher" />
            <textbox asp-for="DateReleased" />
            <textbox asp-for="Players" />
            <checkbox asp-for="OfficiallyLicensed" />
            <checkbox asp-for="MultitapCompatible" />
            <checkbox asp-for="LinkCableCompatible" />
            <checkbox asp-for="VibrationCompatible" />
            <checkbox asp-for="AnalogCompatible" />
            <checkbox asp-for="DigitalCompatible" />
            <checkbox asp-for="LightGunCompatible" />
            <button type="submit" text="Save!" />
        </form>
    </card-body>
</card>